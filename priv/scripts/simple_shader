#!/usr/bin/env elixir

# EAGL Simple Shader Example Runner
# Demonstrates basic OpenGL shader usage

Mix.install([], system_env: [{"MIX_ENV", "dev"}])

# Change to the project directory
project_dir = Path.dirname(__DIR__) |> Path.dirname()
File.cd!(project_dir)

# Compile and run the example
case System.cmd("mix", ["run", "-e", "EAGL.Examples.SimpleShader.run_example()"],
                stderr_to_stdout: true) do
  {output, 0} ->
    IO.puts(output)
    IO.puts("\n✓ Simple shader example completed successfully!")

  {output, exit_code} ->
    IO.puts("✗ Error running simple shader example (exit code #{exit_code}):")
    IO.puts(output)
    System.halt(1)
end
